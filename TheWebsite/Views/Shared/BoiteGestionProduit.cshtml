@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
}

<div class="container border d-flex">
    <div class="p-2">
        <img class="rounded imgSize border-1" />
    </div>

    <div class="flex-grow-1 d-flex justify-content-between">
        <div>
            <div class="row my-3">
                <div class="col-6">
                    <label class="form-label mt-2" for="Title">Titre:</label>
                </div>
                <div class="col-6">
                    <input type="text" class="form-control" placeholder="Entrer le titre" />
                </div>
            </div>

            <div class="row my-3">
                <div class="col-6">
                    <label class="form-label mt-2" for="PrixUnitaire">Prix unitaire:</label>
                </div>
                <div class="col-6">
                    <input type="number" class="form-control" step="0.05" />
                </div>
            </div>

            <div class="row my-3">
                <div class="col-6">
                    <label class="form-label mt-2" for="Quantite">Quantité restante:</label>
                </div>
                <div class="col-6">
                    <input type="number" class="form-control" step="1" />
                </div>
            </div>
        </div>

        <div>
            <button type="submit" class="btn btn-danger w-100 mt-3 mb-2">Supprimer</button>
            <button type="submit" class="btn btn-success w-100 my-2">Sauvegarder</button>
        </div>
        
    </div>
</div>
