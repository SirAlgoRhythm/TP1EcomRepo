@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model TheWebsite.Models.Utilisateur

<div class="mb-3 row">
    <label asp-for="LastName" class="col-sm-2 col-form-label">Nom</label>
    <div class="col-sm-10">
        <input asp-for="LastName" type="text" class="form-control" value="@Model.LastName">
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
</div>

<div class="mb-3 row">
    <label asp-for="Name" class="col-sm-2 col-form-label">Prénom</label>
    <div class="col-sm-10">
        <input asp-for="Name" type="text" class="form-control" value="@Model.Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
</div>

<div class="mb-3 row">
    <label asp-for="UtilisateurId" class="col-sm-2 col-form-label">Identifiant</label>
    <div class="col-sm-10">
        <input asp-for="UtilisateurId" type="text" readonly class="form-control-plaintext" value="@Model.UtilisateurId">
        <span asp-validation-for="UtilisateurId" class="text-danger"></span>
    </div>
</div>
