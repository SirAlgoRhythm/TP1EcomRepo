@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
}

@model TheWebsite.Models.Utilisateur

<div class="container p-2 my-2 border d-flex justify-content-between">
    <div class="py-3">@Html.DisplayFor(x => x.Name) @Html.DisplayFor(x => x.LastName)</div>
    <div class="p-2 d-flex">

        <form asp-controller="Home" asp-action="Index">
            @Html.HiddenFor(x=>x.UtilisateurId, "Value")
            @Html.HiddenFor(x=>x.Name, "Value")
            @Html.HiddenFor(x=>x.LastName, "Value")
            @Html.HiddenFor(x=>x.PasswordHash, "Value")
            @Html.HiddenFor(x=>x.IsVendor, "Value")
            <button type="submit" class="btn btn-danger m-1">Retour </button>
        </form>

    </div>

</div>
