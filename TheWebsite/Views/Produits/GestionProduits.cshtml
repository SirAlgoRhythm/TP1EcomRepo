@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}

<partial name="TopNavbar" />

<div class="container border">
    <form asp-action="AddProduit">
        <div class="row">
            <div class="col-6">
                <div class="row my-3">
                    <div class="col-6">
                        <label class="form-label mt-2" for="Title">Titre:</label>
                    </div>
                    <div class="col-6">
                        <input type="text" class="form-control" placeholder="Entrer le titre" /> 
                    </div>
                </div>

                <div class="row my-3">
                    <div class="col-6">
                        <label class="form-label mt-2" for="Categorie">Catégorie:</label>
                    </div>
                    <div class="col-6">
                        <select class="form-select">
                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                            <option>4</option>
                        </select>
                    </div>
                </div>

                <div class="row my-3">
                    <div class="col-6">
                        <label class="form-label mt-2" for="Image">Image:</label>
                    </div>
                    <div class="col-6">
                        <input type="url" class="form-control" placeholder="Entrer l'URL de l'image" />
                    </div>
                </div>
            </div>

            <div class="col-6">
                <div class="row my-3">
                    <div class="col-6">
                        <label class="form-label mt-2" for="Pour">Pour:</label>
                    </div>
                    <div class="col-3">
                        <input type="radio" class="form-check-input" id="radioHomme" name="optradio" value="Homme" checked>Homme
                    </div>
                    <div class="col-3">
                        <input type="radio" class="form-check-input" id="radioFemme" name="optradio" value="option2">Femme
                    </div>
                </div>

                <div class="row my-3">
                    <div class="col-6">
                        <label class="form-label mt-2" for="PrixUnitaire">Prix unitaire:</label>
                    </div>
                    <div class="col-6">
                        <input type="number" class="form-control" step="0.05" />
                    </div>
                </div>

                <div class="row my-3">
                    <div class="col-6">
                        
                    </div>
                    <div class="col-6">
                        <button type="submit" class="btn btn-success w-100">Ajouter</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<!-- Le div ne sert qu'à faire une ligne dans la page -->
<div class="container my-3 border border-2 border-dark"><div></div></div>

