@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout";
}
@model TheWebsite.Models.ConnexionUtilisateur

<div class="w-25 h-50 position-absolute top-50 start-50 translate-middle">
    <form>
        <div class="mb-3 row">
            <label asp-for="UtilisateurId" class="col-sm-2 col-form-label">@ViewBag.UserType</label>
            <div class="col-sm-10">
                <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example">
                    <option asp-for="UtilisateurId" value="" selected="selected">Choisir...</option>
                    @foreach (var utilisateur in Model.Utilisateurs)
                    {
                        <option asp-for="UtilisateurId" value="@utilisateur.UtilisateurId">@utilisateur.Name</option>
                    }
                </select>
                <span asp-validation-for="UtilisateurId" class="text-danger"></span>
            </div>
        </div>

        <div class="d-flex flex-column bd-highlight mb-3">
            <a type="submit" class="btn btn-primary m-1" asp-action="Connexion">Se connecter</a>
            <a type="button" class="btn btn-primary m-1" asp-action="@ViewBag.Add">Créer un nouveau compte</a>
            <a type="button" class="btn btn-primary m-1" asp-action="@ViewBag.Switch">Aller à l'interface @ViewBag.ButtonText</a>
        </div>
    </form>
</div>
