@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout";
}
@model TheWebsite.Models.Utilisateur

@if (Model.IsVendor)
{
    <partial name="TopNavbar" model="Model"/>

}
else
{
    <partial name="TopBanner" model="Model"/>
}

<div class="w-50 h-50 position-absolute top-50 start-50 translate-middle">

    <form asp-action="Updated" method="post">

        <div class="mb-3 row">
            <label asp-for="LastName" class="col-sm-2 col-form-label">Nom</label>
            <div class="col-sm-10">
                <input asp-for="LastName" type="text" class="form-control" value="@Model.LastName"/>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3 row">
            <label asp-for="Name" class="col-sm-2 col-form-label">Prénom</label>
            <div class="col-sm-10">
                <input asp-for="Name" type="text" class="form-control" value="@Model.Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3 row">
            <label asp-for="UtilisateurId" class="col-sm-2 col-form-label">Identifiant</label>
            <div class="col-sm-10">
                <input asp-for="UtilisateurId" type="text" readonly class="form-control-plaintext" value="@Model.UtilisateurId" />
                <span asp-validation-for="UtilisateurId" class="text-danger"></span>
            </div>
        </div>

        @if (!Model.IsVendor)
        {
            <div class="mb-3 row">
                <label asp-for="Solde" class="col-sm-2 col-form-label">Solde</label>
                <div class="col-sm-10">
                    <input asp-for="Solde" type="number"  class="form-control" value="@Model.Solde" />
                    <span asp-validation-for="Solde" class="text-danger"></span>
                </div>
            </div>
        }

        @Html.HiddenFor(x => x.PasswordHash, "Value")
        @Html.HiddenFor(x => x.IsVendor, "Value")

        <div class="d-flex bd-highlight mb-3">
            <button type="submit" class="btn btn-primary m-1 w-50" >Modifier</button>
            <button type="reset" class="btn btn-primary m-1 w-50">Rénitialiser</button>
        </div>

    </form>
</div>