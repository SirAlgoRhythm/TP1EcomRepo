@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout";
}
@model List<TheWebsite.Models.Utilisateur>

<div class="w-25 h-50 position-absolute top-50 start-50 translate-middle">
    <form>
        <div class="form-group">
            <label>@ViewBag.UserType : </label>
            <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example">
                <option selected>Choisir...</option>
                @foreach (TheWebsite.Models.Utilisateur utilisateur in Model)
                {
                    <option value="@utilisateur.UtilisateurId">@utilisateur.Name</option>
                }
            </select>
        </div>
        <div class="d-flex flex-column bd-highlight mb-3">
            <button type="submit" class="btn btn-primary m-1" asp-action="Connexion">Se connecter</button>
            <button type="button" class="btn btn-primary m-1" asp-action="AddUtilisateur">Créer un nouveau compte</button>
            <a type="button" class="btn btn-primary m-1" asp-action="@ViewBag.Action">Aller à l'interface @ViewBag.ButtonText</a>
        </div>
    </form>
</div>
